
extends base

block content
  h2 Deaths in UK
    .container
      table
        thead
          tr.ui.inverted.table
            th Country
            th County
            th City
            th Origin
            th Date
            th Confirmed
            th Dead
            th Details
        each i in deaths
          tbody
          tr
            td= i.Country
            td= i.County
            td= i.City
            td= i.Origin
            td= i.Date
            td= i.Confirmed
            td= i.Dead
            td
              a(href=`/case/${i.id}`).ui.button Details

        

         
